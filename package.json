{
  "name": "dom_tree",
  "version": "1.0.0",
  "description": "",
  "main": "dom-tree.js",
  "scripts": {
    "dev": "webpack-dev-server --config ./webpack/webpack.dev.js",
    "build:dev": "webpack --config ./webpack/webpack.dev.js",
    "build:production": "webpack --config ./webpack/webpack.prod.js",
    "prebuild:dev": "rm -rf ./dev/*",
    "prebuild:production": "rm -rf dist && mkdir dist",
    "lint": "run-p lint-js lint-css",
    "lint-js": "eslint '**/*.js' '.*.js'",
    "lint-js-fix": "eslint --fix",
    "lint-css": "stylelint './src/css/**/*.css'",
    "lint-css-fix": "stylelint './src/css/**/*.css' --fix",
    "test": "jest --watch",
    "test:single": "jest",
    "test:coverage": "jest --collectCoverage",
    "report-coverage": "codecov",
    "precommit": "lint-staged",
    "prepush": "run-p lint test:single test:coverage",
    "prettier": "prettier --config ./prettier.config.js --write"
  },
  "author": "M.Sureshraj <m.s.suresh100@gmail.com>",
  "license": "ISC",
  "lint-staged": {
    "**/*.js": [
      "lint-js-fix",
      "git add"
    ],
    "src/css/**/*.css": [
      "lint-css-fix",
      "git add"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "codecov": "^3.0.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.6.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^6.1.1",
    "npm-run-all": "^4.1.3",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "postcss-reporter": "^5.0.0",
    "prettier": "^1.13.4",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-merge": "^4.1.2"
  }
}
