{
  "name": "dom_tree",
  "version": "0.1.0",
  "description": "Convert JavaScript Object, Array, JSON into HTML tree view",
  "main": "dist/js/dom_tree.min.js",
  "style": "dist/css/dom_tree.min.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/m-sureshraj/dom-tree.git"
  },
  "bugs": {
    "url": "https://github.com/m-sureshraj/dom-tree/issues"
  },
  "homepage": "https://github.com/m-sureshraj/dom-tree#readme",
  "scripts": {
    "prestart": "if [ ! -f './src/dom_tree.html' ]; then cp ./src/dom_tree_template.html ./src/dom_tree.html; fi",
    "start": "webpack-dev-server --config ./webpack/webpack.dev.js",
    "prebuild:dev": "rm -rf ./dev/*",
    "build:dev": "webpack --config ./webpack/webpack.dev.js",
    "prebuild:production": "rm -rf dist && mkdir dist",
    "build:production": "webpack --config ./webpack/webpack.prod.js",
    "build:demo": "rm -rf demo/dist && mkdir demo/dist && cp demo/index.html demo/dist/index.htm",
    "lint": "run-p lint-js lint-css",
    "lint-js": "eslint '**/*.js' '.*.js'",
    "lint-js-fix": "eslint --fix",
    "lint-css": "stylelint './src/css/**/*.css'",
    "lint-css-fix": "stylelint './src/css/**/*.css' --fix",
    "test": "jest --watch",
    "test:single": "jest",
    "test:coverage": "jest --collectCoverage",
    "report-coverage": "codecov",
    "precommit": "lint-staged",
    "prepush": "run-p lint test:single test:coverage",
    "prettier": "prettier --config ./prettier.config.js --write"
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "M.Sureshraj <m.s.suresh100@gmail.com>",
  "license": "ISC",
  "keywords": [
    "object tree",
    "array tree",
    "html tree view",
    "json to html tree",
    "convert javascript object to html tree view",
    "convert javascript array to html tree view"
  ],
  "lint-staged": {
    "**/*.js": [
      "lint-js-fix",
      "git add"
    ],
    "src/css/**/*.css": [
      "lint-css-fix",
      "git add"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "codecov": "^3.1.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.7.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^6.1.1",
    "mini-css-extract-plugin": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.6",
    "postcss-reporter": "^5.0.0",
    "prettier": "^1.15.3",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  }
}
